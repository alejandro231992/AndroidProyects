<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/loginParent"
    tools:context="upc.smtpra.perfeet.activity.InicioActivity">
    <ScrollView
        style="@style/parent">

        <RelativeLayout
            style="@style/parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <TextView
                    style="@style/headerText"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:text="PerFeet"
                    android:layout_marginTop="40dp"/>

                <TextView
                    style="@style/headerText"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:text="Hola Alejandro"
                    android:layout_marginTop="40dp"/>

                <LinearLayout
                    style="@style/linearParent"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:padding="@dimen/loginViewsMargin">

                    <TextView
                        style="@style/headerTextPrimary"
                        android:layout_marginVertical="10dp"
                        android:layout_marginBottom="30dp"
                        android:textSize="60dp"
                        android:text="Ahora vamos a realizar la mediciÃ³n de tus pies"
                        android:layout_marginTop="@dimen/loginViewsMargin"/>

                    <Button
                        android:id="@+id/cirMedidaButton"
                        style="@style/loginButton"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="Tomar medidas" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>